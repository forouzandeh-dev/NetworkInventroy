@model NetworkInventory.WebApp.Models.ConnectivityItem

@{
    ViewData["Title"] = "Create Connectivity Item";
}

<h1>Create Connectivity Item</h1>

<h4>ConnectivityItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemType" class="control-label"></label>
                <select asp-for="ItemType" class="form-control" id="itemType">
                    <option value="">Select Item Type</option>
                    @foreach (var type in ViewBag.ItemTypes)
                    {
                        <option value="@type">@type</option>
                    }
                </select>
                <span asp-validation-for="ItemType" class="text-danger"></span>
            </div>

            <!--Cable Fields-->
            <div id="cableFields" style="display:none;">
                <div class="form-group">
                    <label asp-for="Length" class="control-label"></label>
                    <input asp-for="Length" class="form-control" />
                    <span asp-validation-for="Length" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CableType" class="control-label"></label>
                    <input asp-for="CableType" class="form-control" />
                    <span asp-validation-for="CableType" class="text-danger"></span>
                </div>

            </div>

            <!--Keystone Fields-->

            <div id="keystoneFields" style="display:none;">

                <div class="form-group">
                    <label asp-for="KeystoneCategory" class="control-label"></label>
                    <input asp-for="KeystoneCategory" class="form-control" />
                    <span asp-validation-for="KeystoneCategory" class="text-danger"></span>
                </div>


            </div>
            <!--Faceplate Fields-->
            <div id="faceplateFields" style="display:none;">
                <div class="form-group">
                    <label asp-for="PortCount" class="control-label"></label>
                    <input asp-for="PortCount" class="form-control" />
                    <span asp-validation-for="PortCount" class="text-danger"></span>
                </div>
               


            </div>


            <!--FiberMode Fields-->
            <div id="fibermodeFields" style="display:none;">
                <div class="form-group">
                    <label asp-for="FiberMode" class="control-label"></label>
                    <input asp-for="FiberMode" class="form-control"/>
                    <span asp-validation-for="FiberMode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConnectorType" class="control-label"></label>
                    <input asp-for="ConnectorType" class="form-control" />
                    <span asp-validation-for="ConnectorType" class="text-danger"></span>
                </div>
                
            </div>
            
            <!--SFPType Fields-->
            <div id="sfptypeFields" style="display:none;">
                <div class="form-group">
                    <label asp-for="SfpType" class="control-label"></label>
                    <input asp-for="SfpType" class="form-control"/>
                    <span asp-validation-for="SfpType" class="text-d"></span>

                    
                </div>
                <div class="form-group">
                    <label asp-for="TransmissionDistance" class="control-label"></label>
                    <input asp-for="TransmissionDistance" class="form-control" />
                    <span asp-validation-for="TransmissionDistance" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstallationDate" class="control-label"></label>
                <input asp-for="InstallationDate" class="form-control" />
                <span asp-validation-for="InstallationDate" class="text-danger"></span>
            </div>
           
                <button type="submit" class="btn btn-primary">Create</button>
            
        </form>

        
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    
        <script>
            document.getElementById("itemType").addEventListener("change",function(){
                var selectedType=this.value;

                //Hide all
                document.getElementById("cableFields").style.display="none";
                document.getElementById("keystoneFields").style.display="none";
                document.getElementById("faceplateFields").style.display="none";
                document.getElementById("fibermodeFields").style.display="none";
                document.getElementById("sfptypeFields").style.display="none";

                //Show based on selection

                if (selectedType==="Cable"){
                    document.getElementById("cableFields").style.display="block";

                } else if (selectedType==="Keystone"){
                    document.getElementById("keystoneFields").style.display="block";
                } else if (selectedType === "Faceplate"){
                    document.getElementById("faceplateFields").style.display="block";
                } else if (selectedType==="Fiber"){
                document.getElementById("fibermodeFields").style.display="block";
                } else if (selectedType==="SFP"){
                document.getElementById("sfptypeFields").style.display="block";
                }

                });
                    // ✅ Automatically show the correct section on page load
            window.addEventListener("DOMContentLoaded", function () {
                document.getElementById("itemType").dispatchEvent(new Event("change"));
            });

        </script>
        
    
}
